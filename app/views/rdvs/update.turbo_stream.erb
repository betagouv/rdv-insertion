<%
  @rdv.rdv_contexts.each do |rdv_context|
    rdv_context.status = RdvContext.statuses["rdv_#{params[:rdv][:status]}"]
    rdv_context.motif_category.configurations.each do |configuration|
    %>
    <%= turbo_stream.replace "rdv_context_#{rdv_context.id}_#{configuration.id}_status", partial: "rdv_contexts/rdv_context_status_cell", locals: { rdv_context: rdv_context, configuration: configuration } %>
    <%= turbo_stream.replace "rdv_context_#{rdv_context.id}_#{configuration.id}_status_tag", partial: "rdv_contexts/rdv_context_status_cell_tag", locals: { rdv_context: rdv_context, configuration: configuration } %>
    <%
    end
  end 
%>
