<%= render "common/remote_modal", title: "Choisissez une organisation" do %>
    <%= simple_form_for(:users_organisation, url: department_user_users_organisations_path(@department, @user), html: { method: :post }) do |f| %>
      <div class="form-group">
        <%= f.input :organisation_id,
                    as: :select,
                    collection: @organisations.map { |o| [o.name, o.id] },
                    include_blank: false,
                    input_html: { class: "form-control" }
        %>
      </div>
      <div class="form-group text-center">
        <%= f.button :submit, "Enregistrer", class: "btn btn-blue" %>
      </div>
    <% end %>
<% end %>

