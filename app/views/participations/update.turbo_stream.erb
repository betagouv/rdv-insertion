<% if @success %>
  <%= turbo_stream.replace dom_id(@participation, :status), partial: "participations/participation_status", locals: { participation: @participation } %>
  <%= turbo_stream.replace dom_id(@participation.rdv_context, :status_tag), partial: "rdv_contexts/rdv_context_status_cell_tag", locals: { rdv_context: @participation.rdv_context, configuration: @participation.current_configuration } %>
<% else %>
  <%= render_turbo_stream_flash_messages %>
<% end %>
