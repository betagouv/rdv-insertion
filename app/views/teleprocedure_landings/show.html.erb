<div class="container marianne text-dark-blue mb-5">
  <!-- https://coderwall.com/p/ftbmsa/render-template-if-exists-in-rails -->
  <% if lookup_context.exists?(@department.number, ["teleprocedure_landings"], true) %>
    <div class="welcome-title justify-content-around mt-5 flex-wrap text-center">
      <h1 class="pb-3">INFORMATION - RSA</h1>
      <%= image_tag uploaded_logo_path(@department.logo), alt: "Logo Département", class: "teleprocedure-department-logo" if @department.logo.attached? %>
    </div>
    <div class="text-center pb-3">
      <%= render @department.number %>
    </div>
  <% else %>
    <div class="text-center py-4">
      Cette page n'est pas disponible pour le département <%= t("with_prefix.#{@department.pronoun}", name: @department.name) %>.
    </div>
  <% end %>
</div>
