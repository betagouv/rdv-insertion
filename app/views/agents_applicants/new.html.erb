<%= render "common/remote_modal", title: "Choisissez un agent référent" do %>
    <%= simple_form_for(:agents_applicant, url: department_applicant_agents_applicants_path(@department, @applicant), html: { method: :post }) do |f| %>
      <div class="form-group">
        <%= f.input :agent_id,
                    as: :select,
                    collection: @agents.map { |a| ["#{a.first_name} #{a.last_name} (#{a.email})", a.id] },
                    include_blank: false,
                    input_html: { class: "form-control" }
        %>
      </div>
      <div class="form-group text-center">
        <%= f.button :submit, "Assigner", class: "btn btn-blue" %>
      </div>
    <% end %>
<% end %>

