<div class="container mt-5">
  <div class="row mb-4 block-white justify-content-center">
    <div class="col-4 justify-content-center">
      <%= render 'search_form' %>
    </div>
    <div class="col-4 justify-content-center">
      <div class="row">
        <h5 class="text-center">
          <%= @organisation.name %>
          <% if image_compiled?("maps/#{@organisation.name.parameterize}.svg") %>
            <%= image_pack_tag("maps/#{@organisation.name.parameterize}.svg", alt: @organisation.name.parameterize, width: 50, height: 50) %>
          <% end %>
        </h5>
      </div>
      <% if display_back_to_list_button? %>
        <div class="row mt-4 text-center">
          <%= link_to organisation_applicants_path(@organisation) do %>
            <i class="fas fa-angle-left"></i> liste complète
          <% end %>
        </div>
      <% end %>
    </div>
    <div class="col-1"></div>
    <div class="col-3 justify-content-center">
      <div class="text-center">
        <%= link_to new_organisation_upload_path(@organisation), class: "btn text-white mb-2 btn-primary" do %>
          Ajouter allocataires
        <% end %>
      </div>
      <div class="mt-2">
        <%=
          select(
            "applicant", "status", options_for_select_status(@statuses_count),
            { prompt: "Filtrer par statut" },
            class: "text-center form-select js-status-selector"
          )
        %>
      </div>
      <div class="mt-2 text-center">
        <%= check_box("applicants_list", "action_required", class: "js-action-required-checkbox") %> Intervention nécessaire
        <small><i class="fas fa-question-circle" id="js-action-required-tooltip"></i></small>
      </div>
    </div>
  </div>
  <%= render "applicants_list" %>
</div>
