<%= turbo_stream.replace "agents_list" do %>
  <%= render partial: "applicants/agents_list", locals: { agents: @applicant.reload.agents } %>
<% end %>
<%= turbo_stream.prepend "flashes" do %>
  <%= render partial: "common/flash", locals: { flash: @success ? { success: "Le référent a bien été assigné" } : { error: "Une erreur s'est produite lors de l'assignation du référent: #{@errors}" } } %>
<% end %>
