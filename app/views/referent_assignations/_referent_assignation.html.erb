<div id="<%= dom_id(agent, :referent) %>" class="d-flex justify-content-between my-4">
  <div><p><%= "#{agent.first_name} #{agent.last_name} (#{agent.email})" %></p></div>
  <div>
    <%= form_for(:referent_assignation, url: referent_assignations_path, method: assigned ? :delete : :post) do |f| %>
      <%= f.hidden_field :user_id, value: user.id %>
      <%= f.hidden_field :agent_id, value: agent.id %>
      <%= f.submit assigned ? "- Retirer" : "+ Assigner", class: "btn #{assigned ? 'btn-danger' : 'btn-blue'} text-white" %>
    <% end %>
  </div>
</div>
