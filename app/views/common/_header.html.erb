<header>
  <nav class="navbar px-3 navbar-expand-lg">
    <%= link_to root_path do  %>
      <%= image_pack_tag "logos/rdv-insertion.png", alt: "Logo rdv insertion" %>
    <% end %>
    <div class="nav justify-content-around">
      <% if logged_in? %>
        <div class="mx-5 text-center col">
          <%= link_to sign_out_path, method: :delete do %>
            <button class="btn btn-default btn-logout">
              Se déconnecter
            </button>
          <% end %>
        </div>
      <% end %>
      <%= image_pack_tag "logos/republique-francaise-logo.svg", height: 50, alt: "République francaise" %>
    </div>
  </nav>
</header>
