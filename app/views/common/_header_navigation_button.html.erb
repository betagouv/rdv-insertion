<div class="dropdown ms-3" data-controller="dropdown-menu">
  <button class="btn btn-navigation-dropdown dropdown-toggle accessible text-truncate" type="button" data-action="click->dropdown-menu#toggle" data-dropdown-menu-target="button" aria-haspopup="true" aria-expanded="false">
    <i class="fas <%= Current.structure_type == "department" ? "fa-city" : "fa-building" %> me-1"></i> <%= Current.structure.name %><%= " - Toutes les organisations" if department_level? %>
  </button>
  <div data-dropdown-menu-target="dropdown" class="dropdown-menu navigation-dropdown py-0 mt-2">
      <%= link_to department_users_path(Current.department), title: "#{Current.department.name } - Toutes les organisations" do %>
        <div class="dropdown-item py-3 text-truncate <%= "navigation-selected-item" if department_level? %>">
          <i class="fas fa-city me-3 <%= department_level? ? "text-white" : "text-dark-blue" %>"></i><%= Current.department.name %> - Toutes les organisations
        </div>
      <% end %>
      <% Current.department_organisations.sort_by(&:name).each do |organisation| %>
        <%= link_to organisation_users_path(organisation), title: "#{organisation.name}" do %>
          <div class="dropdown-item py-3 text-truncate <%= "navigation-selected-item" if Current.structure == organisation %>"><i class="fas fa-building me-3 <%= Current.structure == organisation ? "text-white" : "text-dark-blue" %>"></i><%= organisation.name %></div>
        <% end %>
      <% end %>
  </div>
</div>
