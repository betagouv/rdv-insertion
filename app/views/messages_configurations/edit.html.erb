<%= turbo_frame_tag @messages_configuration do %>
  <%= simple_form_for(@messages_configuration, html: { method: :patch }) do |f| %>
    <div>
      <div class="row card-white rdv-insertion-form justify-content-center mb-2">
        <div class="mb-4">
          <div class="row d-flex justify-content-start flex-wrap">
            <h4 class="pb-2">Courrier</h4>
            <%= render "common/attribute_input", f:f, attribute: :direction_names, array: true, tooltip: true %>
            <%= render "common/attribute_input", f:f, attribute: :signature_lines, array: true %>
            <%= render "common/attribute_input", f:f, attribute: :sender_city, tooltip: true %>
            <%= render "common/attribute_input", f:f, attribute: :letter_sender_name, tooltip: true %>
            <%= render "common/attribute_input", f:f, attribute: :display_europe_logos %>
            <%= render "common/attribute_input", f:f, attribute: :display_department_logo, tooltip: true %>
            <%= render "common/attribute_input", f:f, attribute: :help_address, tooltip: true %>
            <h4 class="pt-5 pb-2">SMS</h4>
            <%= render "common/attribute_input", f:f, attribute: :sms_sender_name, tooltip: true %>
          </div>
        </div>
      </div>
      <div class="d-flex justify-content-end mb-4">
        <input type="hidden" name="_method" value="patch" autocomplete="off">
        <%= button_tag("Enregistrer", type: "submit", class: "btn btn-blue", form: "edit_messages_configuration_1") %>
        <%= link_to messages_configuration_path(@messages_configuration) do %>
          <button class="btn btn-blue-out mx-2">Annuler</button>
        <% end %>
      </div>
    </div>
  <% end %>
<% end %>
