<div class="container marianne">
  <%= render 'header' %>
  <div class="row d-flex justify-content-center mt-4 flex-wrap">
    <div class="col-12 col-md-6 px-5 pb-5">
      <p class="highlight-stat big margin-left"><%= Stats::Counters::UsersCreated.value(scope: @scope) %></p>
      <p class="highlight-stat margin-left">usagers gérés dans rdv-insertion</p>
      <%= line_chart Stats::Counters::UsersCreated.values_grouped_by_month(scope: @scope, stop_at: Time.now.last_month.end_of_month), title: "Nouveaux usagers par mois", colors: ["#083b66"] %>
    </div>
    <div class="col-12 col-md-6 px-5 pb-5 background-blue-light">
      <p class="highlight-stat big margin-left"><%= Stats::Counters::RdvsTaken.value(scope: @scope) %></p>
      <p class="highlight-stat margin-left">rendez-vous pris</p>
      <%= line_chart Stats::Counters::RdvsTaken.values_grouped_by_month(scope: @scope, stop_at: Time.now.last_month.end_of_month), title: "Nouveaux rdvs par mois", colors: ["#083b66"] %>
    </div>
  </div>
  <% if current_page?(action: 'index') || @display_all_stats %>
    <div class="row d-flex justify-content-center flex-wrap-reverse">
      <div class="col-12 col-md-6 px-5 pb-5 background-blue-light">
        <p class="highlight-stat big margin-left"><%= Stats::Counters::InvitationsSent.value(scope: @scope) %></p>
        <p class="highlight-stat margin-left">invitations envoyées par mail, SMS, et courrier</p>
        <%= line_chart Stats::Counters::InvitationsSent.values_grouped_by_month(scope: @scope, stop_at: Time.now.last_month.end_of_month), title: "Invitations envoyées par mois", colors: ["#083b66"] %>
      </div>
      <div class="col-12 col-md-6 px-5 pb-5">
        <p class="highlight-stat big margin-left"><%= Stats::Counters::DaysBetweenInvitationAndRdv.value(scope: @scope).round %> jours</p>
        <p class="highlight-stat margin-left">délai moyen entre l'invitation et la prise de rendez-vous</p>
        <%= line_chart Stats::Counters::DaysBetweenInvitationAndRdv.values_grouped_by_month(scope: @scope, start_at: Time.zone.parse("2022-01-01"), stop_at: Time.now.last_month.end_of_month), title: "Délai moyen d'invitation par mois", ytitle: "jours", colors: ["#083b66"] %>
      </div>
    </div>
    <div class="row d-flex justify-content-center flex-wrap">
      <div class="col-12 col-md-6 px-5 pb-5">
        <p class="highlight-stat big margin-left"><%= Stats::RateOfNoShowInvitations.value(scope: @scope)&.round %> %</p>
        <p class="highlight-stat margin-left">de rendez-vous non honorés avec rdv-insertion <strong>après invitation</strong></p>
        <%= line_chart Stats::RateOfNoShowInvitations.values_grouped_by_month(scope: @scope, stop_at: Time.now.last_month.end_of_month), title: "Taux de rdvs non honorés après invitation par mois", suffix: "%", colors: ["#083b66"] %>
      </div>
      <div class="col-12 col-md-6 px-5 pb-5 background-blue-light">
        <p class="highlight-stat big margin-left"><%= Stats::RateOfNoShowConvocations.value(scope: @scope)&.round %> %</p>
        <p class="highlight-stat margin-left">de rendez-vous non honorés avec rdv-insertion <strong>après convocation</strong></p>
        <%= line_chart Stats::RateOfNoShowConvocations.values_grouped_by_month(scope: @scope, start_at: Time.zone.parse("2022-10-01"), stop_at: Time.now.last_month.end_of_month), title: "Taux de rdvs non honorés après convocation par mois", suffix: "%", colors: ["#083b66"] %>
      </div>
    </div>
    <div class="row d-flex justify-content-center flex-wrap-reverse">
      <div class="col-12 col-md-6 px-5 pb-5 background-blue-light">
        <p class="highlight-stat big margin-left"><%= Stats::RateOfAutonomousUsers.value(scope: @scope).round %> %</p>
        <p class="highlight-stat margin-left">d'usagers invités ayant pris au moins <strong>un rendez-vous en autonomie</strong></p>
        <%= line_chart Stats::RateOfAutonomousUsers.values_grouped_by_month(scope: @scope, stop_at: Time.now.last_month.end_of_month), title: "Taux d'usagers autonomes par mois", suffix: "%", colors: ["#083b66"] %>
      </div>
      <div class="col-12 col-md-6 px-5 pb-5">
        <p class="highlight-stat big margin-left"><%= Stats::RateOfUsersWithRdvSeenInLessThanThirtyDays.value(scope: @scope)&.round %> %</p>
        <p class="highlight-stat margin-left">d'usagers <strong>ayant honoré un 1er rendez-vous RSA en - de 30 jours</strong></p>
        <%= line_chart Stats::RateOfUsersWithRdvSeenInLessThanThirtyDays.values_grouped_by_month(scope: @scope, stop_at: Time.now.last_month.end_of_month), title: "Taux rdv en - de 30 jours par mois", suffix: "%", colors: ["#083b66"] %>
      </div>
    </div>
    <div class="row d-flex justify-content-center flex-wrap-reverse">
      <div class="col-12 col-md-6 px-5 pb-5">
        <p class="highlight-stat big margin-left"><%= Stats::RateOfUsersWithRdvSeen.value(scope: @scope)&.round %> %</p>
        <p class="highlight-stat margin-left">d'usagers ajoutés dans l'outil pour un RDV d'orientation <strong>ont eu leur orientation réalisée via rdv-insertion</strong></p>
        <%= line_chart Stats::RateOfUsersWithRdvSeen.values_grouped_by_month(scope: @scope, stop_at: Time.now.last_month.end_of_month), title: "Taux d'usagers orientés via l'outil par mois", suffix: "%", colors: ["#083b66"] %>
      </div>
    </div>
    <div class="row d-flex justify-content-center flex-wrap">
      <div class="col-12 col-md-6 px-5 pb-5 d-flex flex-column justify-content-center align-items-center">
        <p class="highlight-stat big margin-left"><%= Stats::Counters::NumberOfAgents.value(scope: @scope) %> agents</p>
        <% if current_page?(action: 'index') %>
          <p class="highlight-stat margin-left">travaillant pour <strong><%= @department_count %> départements</strong>  utilisent rdv-insertion</p>
        <% else %>
          <p class="highlight-stat margin-left">utilisent rdv-insertion</p>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
