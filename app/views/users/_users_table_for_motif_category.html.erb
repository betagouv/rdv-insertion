<table class="table table-hover table-responsive">
  <thead class="text-dark-blue">
    <th scope="col">Nom</th>
    <th scope="col">Prénom</th>
    <% @current_category_configuration.invitation_formats.each do |invitation_format| %>
      <th scope="col" class="d-none d-lg-table-cell"><%= t(".#{invitation_format}_column_title") %></th>
    <% end  %>
    <% if show_invitations?(@current_category_configuration) %>
      <th scope="col">Première invitation</th>
      <th scope="col">Dernière invitation</th>
    <% end %>
    <% if show_convocation?(@current_category_configuration) %>
      <th scope="col">Dernière convocation envoyée le</th>
    <% end %>
    <th scope="col">Statut</th>
    <th scope="col"></th>
  </thead>
  <tbody class="align-middle">
    <% @users.each do |user| %>
      <% rdv_context = user.rdv_context_for(@current_motif_category) %>
      <tr
        class="clickable"
        data-controller="user-link"
        data-user-link-path="<%= structure_user_path(user.id) %>"
        data-action="click->user-link#navigate"
      >
        <td><%= display_attribute user.last_name %></td>
        <td><%= display_attribute user.first_name %></td>
        <% @current_category_configuration.invitation_formats.each do |invitation_format| %>
          <td class="d-none d-lg-table-cell">
            <% if rdv_context.rdv_pending? || rdv_context.closed? %>
              <!-- show nothing -->
            <% elsif user.can_be_invited_through?(invitation_format) %>
              <%= render "invitations/checkbox_form", user: user, invitation_format: invitation_format, motif_category: @current_motif_category, rdv_context: rdv_context, checked: checked = rdv_context.first_invitation_relative_to_last_participation_by(invitation_format).present?, disabled: checked || user.deleted? %>
            <% else %>
              -
            <% end %>
          </td>
        <% end %>
        </td>
        <% if show_invitations?(@current_category_configuration) %>
          <td id="first-invitation-date-<%= rdv_context.id %>"><%= display_attribute format_date(rdv_context.first_invitation_created_at) %></td>
          <td id="last-invitation-date-<%= rdv_context.id %>"><%= display_attribute(format_date(rdv_context.last_invitation_created_at)) %></td>
        <% end %>
        <% if show_convocation?(@current_category_configuration) %>
          <% if should_convene_for?(rdv_context, @current_category_configuration) %>
            <td>
              <%= render "rdv_contexts/convocation_button",
                          user_id: user.id, motif_category_id: @current_motif_category.id,
                          organisation_ids: department_level? ? (@organisations.map(&:id) & user.organisation_ids) : [@organisation.id] %>
            </td>
          <% else %>
            <td><%= display_attribute format_date(rdv_context.last_convocation_created_at) %></td>
          <% end %>
        <% end %>
        <td id="rdv-context-status-<%= rdv_context.id %>" class="<%= background_class_for_context_status(rdv_context, @current_category_configuration.number_of_days_before_action_required) %>">
          <%= display_context_status(rdv_context, @current_category_configuration.number_of_days_before_action_required) %>
        </td>
        <td class="padding-left-15">
          <%= link_to structure_user_path(user.id) do %>
            <button class="btn btn-blue">Gérer</button>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
