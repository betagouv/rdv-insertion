<%= turbo_frame_tag "user_page", data: { turbo_action: "advance" } do %>
  <%= render "users/page_title", user: @user %>

  <div class="container text-dark-blue h4-as-labels mt-4">
    <%= form_for(@user, url: structure_user_path(@user.id), method: :patch) do |f| %>
      <%= render 'user_form', f: f, title: "Modifier usager", return_path: structure_user_path(@user.id) %>
    <% end %>
  </div>
<% end %>
