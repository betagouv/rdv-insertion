<%= render 'users/archive_banner' if @archive.present? %>

<div class="container text-dark-blue h4-as-labels mt-4">
  <%= render "users/user_page_header" %>

  <%= turbo_frame_tag "user_page_body" do %>
    <%= render "users/user_tabs", user: @user, tab: "parcours" %>

    <div>
      <h4>Historique d'accompagnement</h4>
      <%= render "orientations/orientations_list", orientations: @orientations %>

      <%= link_to(new_orientation_path(user_id: @user.id), data: { turbo_frame: 'remote_modal' }) do %>
        <button class="btn btn-blue mb-3"><i class="fas fa-user-plus"></i>Ajouter une orientation</button>
      <% end %>
    </div>
  <% end %>
</div>
