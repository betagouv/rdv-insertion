<% if errors.present? && errors.any? %>
  <%= render "common/error_list", errors: errors %>
<% end %>

<div class="container rdv-insertion-form text-dark-blue h4-as-labels mt-4">
  <div class="mb-4">
    <h4>Nom de l'onglet Excel</h4>
    <div class="col-12 col-md-6">
      <p><%= f.input :sheet_name %></p>
    </div>
    <table class="table table-hover table-responsive text-dark-blue">
      <thead>
        <th class="col">Information collect√©e</th>
        <th class="col">Nom de la colonne dans le fichier</th>
      </thead>
      <tbody>
      <% FileConfiguration.column_attributes_names.map do |column_name| %>
        <tr>
          <td><%= FileConfiguration.human_attribute_name(column_name) %></td>
          <td><%= f.input column_name%></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>

  <div class="d-flex justify-content-end">
    <button type="submit" class="btn btn-blue">Enregistrer</button>
  </div>
</div>
